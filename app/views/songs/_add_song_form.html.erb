<%= form_with(model: [@report, @section, @set_list_order], url: report_section_set_list_orders_path(@report, @section), local: false, html: { data: { action: 'submit->report#submitSong' } }) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">曲を追加</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <%= form.fields_for :song, @set_list_order.build_song do |song_form| %>
      <div class="form-group">
        <%= song_form.label :name, '曲名' %>
        <%= song_form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= song_form.label :artist, 'アーティスト' %>
        <%= song_form.text_field :artist, class: 'form-control' %>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :body, '感想' %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
    <%= form.submit '追加', class: 'btn btn-primary' %>
  </div>
<% end %>